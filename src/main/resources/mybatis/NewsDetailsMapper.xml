<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aitravelba.orm.weixin.NewsDetailsMapper" >
  <resultMap id="BaseResultMap" type="com.aitravelba.pojo.weixin.NewsDetails" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="parent_id" property="parentId" jdbcType="INTEGER" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="order" property="order" jdbcType="INTEGER" />
    <result column="send_date" property="sendDate" jdbcType="TIMESTAMP" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, parent_id,content,order,send_date,status,create_time,update_time
  </sql>
  <select id="queryCurDayNews" resultMap="BaseResultMap">
      SELECT
			t2.*
		FROM
			news t1
		JOIN news_details t2 ON t1.id = t2.parent_id
		WHERE
		    t1.`status` = 0 and t2.`status` = 0 and
			DATE_FORMAT(t2.create_time, '%Y-%m-%d') = DATE_FORMAT(NOW(), '%Y-%m-%d')
	    ORDER BY t2.order
  </select>
  <insert id="insert">
     INSERT INTO `news_details` (
	`parent_id`,
	`content`,
	`order`,
	`send_date`,
	`status`,
	`create_time`,
	`update_time`
	)
		VALUES
	(
		#{parentId},
		#{content},
		#{order},
		now(),
		0,
		now(),
		now()
	);
  </insert>
</mapper>